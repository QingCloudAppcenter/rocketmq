ln -s -f /opt/app/conf/caddy/index.html /data/index.html

flush /opt/app/conf/caddy/caddyfile << CADDYFILE_EOF
{{ getv "/host/ip" }}:80 {
  {{- with getv "/env/web_console_password" "" }}
